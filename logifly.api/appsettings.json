{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "PostgreSQL": "Host=localhost;Port=5432;Database=logify_db;Username=logify_admin_umut;Password=logify_admin_123"
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Elasticsearch","Serilog.Sinks.Console","Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId",
            "WithProcessId"
        ],
        "WriteTo": [
            {
                "Name": "Elasticsearch",
                "Args": {
                    "nodeUris": "http://elasticsearch:9200",
                    "indexFormat": "logify-api-logs-{0:yyyy.MM.dd}",
                    "autoRegisterTemplate": true,
                    "numberOfShards": 1,
                    "numberOfReplicas": 0
                }
            }
        ],
        "Properties": {
            "Application": "logifly.api"
        }
    }
}
